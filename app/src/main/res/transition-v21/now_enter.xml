<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together">

    <slide android:slideEdge="left">
        <targets>
            <target android:targetId="@+id/tv_episode_title" />
            <target android:targetId="@+id/tv_podcast_title" />
        </targets>
    </slide>

    <slide android:slideEdge="bottom">
        <targets>
            <target android:targetId="@+id/ib_rewind" />
            <target android:targetId="@+id/ib_play_pause" />
            <target android:targetId="@+id/ib_fastforward"/>
        </targets>
    </slide>

</transitionSet>